{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
        "@environment": ["config/config.prod"]
    },
    "lib": [
      "dom",
      "es2015"
    ],  
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "es5"
  },  
  "include": [
    "src/**/*.ts",
    "config/*.ts"
  ],  
  "exclude": [
    "node_modules",
	"test.ts",
    "**/*.spec.ts",
    "src/**/*.spec.ts",
    "src/**/__tests__/*.ts"
  ],  
  "compileOnSave": false,
  "atom": {
    "rewriteTsconfig": false
  }
}

